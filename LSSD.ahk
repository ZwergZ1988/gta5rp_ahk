toggle_gui(guiIDToShow) {
    global currentGUI
    if (currentGUI != 0) {
        Gui %currentGUI%:Hide
    }
    if (currentGUI != guiIDToShow) {
        Gui, %guiIDToShow%:Show, x0 y0 NoActivate, shpora%guiIDToShow%
        currentGUI := guiIDToShow
    } else {
        currentGUI := 0
    }
}

