            Case "А":
                lawColor := "cFuchsia"
            Case "Д":
                lawColor := "cLime"
            Default:
                lawColor := "cWhite"
        }
        

        if (law[5] == "IMPORTANT") {
            textHeight := add_text_to_gui(guiID, coordX, startOfLawY, [[[lawColor,law[1], "U"]]])
        } else {
            textHeight := add_text_to_gui(guiID, coordX, startOfLawY, [[[lawColor,law[1]]]])
        }
